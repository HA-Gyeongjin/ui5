<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">

    <Dialog id="idInfo"
            title="항공편 정보"
            >
        <buttons>
            <Button text="닫기" press="onDialogClose"/>
        </buttons> 
        <content>
        <f:SimpleForm >
            <l:VerticalLayout >
                <l:HorizontalLayout >
                    <Label text="항공사" width="150px"/>
                    <Text text="{Carrid}"/>
                </l:HorizontalLayout>
                <l:HorizontalLayout >
                    <Label text="항공편번호" width="150px"/>
                    <Text text="{Connid}"/>
                </l:HorizontalLayout>
                <l:HorizontalLayout >
                    <Label text="비행시간" width="150px"/>
                    <Text text="{Fltime}"/>
                </l:HorizontalLayout>
                <l:HorizontalLayout >
                    <Label text="출발시간" width="150px"/>
                    <Text text="{Deptime}"/>
                </l:HorizontalLayout>
                <l:HorizontalLayout >
                    <Label text="도착시간" width="150px"/>
                    <Text text="{Arrtime}"/>
                </l:HorizontalLayout>
                <l:HorizontalLayout >
                    <Label text="비행거리" width="150px"/>
                    <Text text="{Distance}"/>
                    <Text text="{Distid}"/>
                </l:HorizontalLayout>
            </l:VerticalLayout>
        </f:SimpleForm>   
        </content>
    </Dialog>        

</core:FragmentDefinition>